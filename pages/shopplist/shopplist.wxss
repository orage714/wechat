.shop{
  display: flex;
  padding: 20rpx;
  border-bottom:1rpx solid #ddd;
  position: relative;
}
.shop-img{
  width:160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 12px;
  line-height: 1.5;
  width:520rpx;
}
.info .title{
  width:372rpx;
  font-size: 16px;
}
.shop-star{
  position: absolute;
  right: 20rpx;
  top:0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.star-after{
 color:#e2e2e2;
}
.star-before{
  position: absolute;
  color:#f19e38;

  overflow: hidden;
}
.checkbox{
  position: relative;
  top:50rpx;
}